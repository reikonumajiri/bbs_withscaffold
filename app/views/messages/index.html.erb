<p id="notice"><%= notice %></p>

<h1>投稿一覧</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <!-- <th>スレッドID</th> -->
      <th>投稿者</th>
      <th>投稿内容</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= @board.title %></td>
        <!-- <td><%= message.board_id %></td> -->
        <td><%= message.creator_name %></td>
        <td><%= message.message %></td>
        <td><%= link_to '詳細', board_message_path(@board, message) %></td>
        <td><%= link_to '編集', edit_board_message_path(@board, message) %></td>
        <td><%= link_to '削除', board_message_path(@board, message), method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '投稿する', new_board_message_path %>
